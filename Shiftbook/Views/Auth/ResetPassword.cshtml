
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}
<!-- Content area -->
<div class="content pb-20">

    <!-- Tabbed form -->
    <div class="tabbable panel login-form width-400">

        <div class="tab-content panel-body">
            <div class="text-center">
                <span style="color:@ViewBag.color">@ViewBag.message</span>
            </div>
            <div class="tab-pane fade in active" id="basic-tab1">
                <form action="@Url.Action("PostResetPassword","Auth")" method="post" enctype="multipart/form-data">
                    <div class="text-center">
                        <div class="icon-object border-slate-300 text-slate-300"><i class="icon-lock5"></i></div>
                        <h5 class="content-group">Reset your Account <small class="display-block">Password</small></h5>
                    </div>
                    <input type="hidden" class="form-control" readonly required name="t" value="@ViewBag.Time">
                    <input type="hidden" class="form-control" readonly required name="encId" value="@ViewBag.EncId">
                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-icon" type="button"><i class="icon-lock"></i></span>
                            </span>
                            <input type="hidden" value="@ViewBag.Email" name="Email" />
                            <input type="password" class="form-control" placeholder="New Password" required name="NewPassword" id="password" onkeyup="CheckStrength(this.value)">
                            <span class="input-group-btn">
                                <button class="btn btn-default" onclick="ShowPasswords(1)" type="button" style="display:block" id="SignupShowPassword">Show</button>
                                <button class="btn btn-default" onclick="ShowPasswords(1)" type="button" style="display:none" id="SignupHidePassword">Hide</button>
                            </span>
                        </div>
                        <div id="passwordStrength">
                            <span class="text-danger" id="poor"></span>
                            <span class="text-warning" id="weak"></span>
                            <span class="text-success" id="strong"></span>
                        </div>
                        <div class="" id="passwordInfo"></div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-icon" type="button"><i class="icon-lock"></i></span>
                            </span>
                            <input type="password" class="form-control" placeholder="Confirm New Password" required name="ConfirmPassword" id="ConfirmPassword" onkeyup="matchPassword(this.value)">
                            <span class="input-group-btn">
                                <button class="btn btn-default" onclick="ShowPasswords(2)" type="button" style="display:block" id="LoginShowPassword">Show</button>
                                <button class="btn btn-default" onclick="ShowPasswords(2)" type="button" style="display:none" id="LoginHidePassword">Hide</button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn bg-blue btn-block" id="userFormButton">Reset <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- /tabbed form -->

</div>
<!-- /content area -->