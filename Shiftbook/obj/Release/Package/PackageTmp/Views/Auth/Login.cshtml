
@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<!-- Content area -->
<div class="content pb-20">

    <!-- Tabbed form -->
    <div class="tabbable panel login-form width-400">
        <ul class="nav nav-tabs nav-justified" style="background:#dedede">
            <li class="active"><a href="#basic-tab1" data-toggle="tab"><h6 class="text-semibold">Sign in</h6></a></li>
        </ul>

        <div class="tab-content panel-body">
            <div class="text-center">
                <span style="color:@ViewBag.color">@ViewBag.message</span>
            </div>
            <div class="tab-pane fade in active" id="basic-tab1">
                <form action="@Url.Action("PostLogin","Auth")" method="post" enctype="multipart/form-data">
                    <div class="text-center">
                        <div class="icon-object border-slate-300 text-slate-300"><i class="icon-reading"></i></div>
                        <h5 class="content-group">Login to your account <small class="display-block">Your credentials</small></h5>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-icon" type="button"><i class="icon-user"></i></span>
                            </span>
                            <input type="email" class="form-control" placeholder="Email" name="Email" required="required">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <span class="input-group-btn">
                                <span class="btn btn-default btn-icon" type="button"><i class="icon-lock"></i></span>
                            </span>
                            <input type="password" class="form-control" placeholder="New Password" required name="Password" id="ConfirmPassword">
                            <span class="input-group-btn">
                                <button class="btn btn-default" onclick="ShowPasswords(2)" type="button" style="display:block" id="LoginShowPassword">Show</button>
                                <button class="btn btn-default" onclick="ShowPasswords(2)" type="button" style="display:none" id="LoginHidePassword">Hide</button>
                            </span>
                        </div>
                    </div>

                    <div class="form-group login-options">
                        <div class="row">
                            <div class="col-sm-12 text-right">
                                <a href="@Url.Action("ForgotPassword","Auth")">Forgot password?</a>
                            </div>
                        </div>
                    </div>

                    <div class="form-group">
                        <button type="submit" class="btn bg-blue btn-block">Login <i class="icon-arrow-right14 position-right"></i></button>
                    </div>
                </form>
            </div>

        </div>
    </div>
    <!-- /tabbed form -->

</div>
<!-- /content area -->
