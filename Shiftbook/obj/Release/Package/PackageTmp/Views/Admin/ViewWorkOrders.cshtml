    }

    function clearSearch()
    {
        $('#orderTable').DataTable().clear();
        $('#orderTable').DataTable().destroy();

        $('#searchDate').val("");
        $('#searchType').val("").change();
        $('#searchAuthor').val("");
        $('#searchDepartment').val("");
        $('#searchTags').val("").change();

        loadTable();
    }


    function getExtension(str)
