                                    <th class="text-bold" hidden>...</th>
                                    <th class="text-bold text-center" style="min-width:200px">
                                        Action
                                    </th>
                                    <th class="text-bold text-center">
                                        Nr.
                                    </th>
                                    <th class="text-bold text-center">
                                        Date/Time
                                    </th>
                                    @*<th class="text-bold text-center">
                                        Type
                                    </th>*@
                                    <th class="text-bold text-center">
                                        Location
                                    </th>
                                    <th class="text-bold text-center">
                                        Worker
                                    </th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




